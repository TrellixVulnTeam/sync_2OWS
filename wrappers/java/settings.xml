<settings>
    <servers>
        <server>
            <id>ossrh</id>
            <username>${env.OSSRH_ACCOUNT_USER}</username>
            <password>${env.OSSRH_ACCOUNT_PASSWORD}</password>
        </server>
        <server>
            <id>gitlab-maven</id>
            <configuration>
                <httpHeaders>
                    <property>
                        <name>Job-Token</name>
                        <value>${env.CI_JOB_TOKEN}</value>
                    </property>
                </httpHeaders>
            </configuration>
        </server>
    </servers>
</settings>
